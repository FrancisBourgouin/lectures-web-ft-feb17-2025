<p style="color: green"><%= notice %></p>
<% content_for :title, "Urls" %>
<h1>Urls</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Short URL</th>
      <th scope="col">Long URL</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
        <% @urls.each do |url| %>
        <tr>
          <td><%= url[:short_url] %></td>
          <td><%= url[:long_url] %></td>
          <td>

            <form method="GET" action="/urls/<%= url[:id] %>">
              <input class="btn btn-outline-primary" type="submit" value="Update" disabled="<%= current_user.nil?%>">
            </form>
          </td>
          <td>
            <form method="DELETE" action="/urls/<%= url[:id] %>">
              <input class="btn btn-outline-danger" type="submit" value="Delete" disabled="<%= current_user.nil?%>">
            </form>
          </td>
        </tr>
        <% end %>
      </tbody>
      </table>
